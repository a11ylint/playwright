{
  "name": "@a11ylint/playwright",
  "version": "1.0.0-alpha.4",
  "license": "MIT",
  "description": "A11ylint playwright integration",
  "author": "PLANCQ Paul <paul.plancq@outlook.fr>",
  "maintainers": [
    "PLANCQ Paul <paul.plancq@outlook.fr>",
    "CroquetMickael <mickael.croquet@laposte.net>"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a11ylint/playwright"
  },
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc",
    "lint": "concurrently --prefix-colors auto \"npm:eslint\" \"npm:tsc\"",
    "eslint": "eslint \"{src,tests,scripts}/**/*.{js,jsx,ts,tsx}\"",
    "eslint:fix": "eslint \"{src,tests,scripts}/**/*.{js,jsx,ts,tsx}\" --fix",
    "tsc": "tsc --noEmit",
    "package:check": "node ./scripts/package-check.mjs",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "engines": {
    "node": "^20.19.5 || ^22.14.0 || >= 24.10.0"
  },
  "bugs": {
    "url": "https://github.com/a11ylint/playwright/issues"
  },
  "keywords": [
    "a11y",
    "accessibility",
    "lint",
    "linter",
    "RGAA"
  ],
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@pplancq/commitlint-config": "^2.3.3",
    "@pplancq/eslint-config": "^5.0.22",
    "@pplancq/prettier-config": "^1.2.9",
    "@pplancq/semantic-release-config": "^2.0.4",
    "@types/node": "^24.10.9",
    "concurrently": "^9.2.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "rimraf": "^6.1.2",
    "semantic-release": "^25.0.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@playwright/test": ">= 1.54.0",
    "playwright-core": ">= 1.0.0"
  },
  "prettier": "@pplancq/prettier-config",
  "commitlint": {
    "extends": [
      "@pplancq/commitlint-config"
    ]
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": "eslint --fix",
    "*.{ts,tsx}": "tsc-files --noEmit",
    "(package|package-lock).json": "npm run package:check"
  },
  "release": {
    "extends": [
      "@pplancq/semantic-release-config"
    ],
    "repositoryUrl": "https://github.com/a11ylint/playwright"
  },
  "volta": {
    "node": "24.13.0",
    "npm": "11.7.0"
  },
  "files": [
    "build",
    "browserHelpers"
  ],
  "dependencies": {
    "@a11ylint/core": "1.0.0-alpha.7"
  }
}
